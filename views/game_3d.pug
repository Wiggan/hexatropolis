extends layout

block head
  script(type='text/javascript', src='/poc3d/ui/menu.js')
  script(type='text/javascript', src='/poc3d/index.js')
  style.
    #stack {
    position:relative;
    vertical-align: middle;
    }
    #stack > canvas {
    position:absolute;
    left:0;
    top:0;
    image-rendering: -moz-crisp-edges;
    image-rendering: -webkit-crisp-edges;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
    }
    #outer-container {
      display: none;
      position: absolute;
      width: 100%;
      height: 100%;
    }
    #inner-container {
      display: flex;
      width: 100%;
      height: 100%;
      justify-content: center;
    }

    #menu-content {
      display: flex;
      flex-direction: column;
      justify-content: center;
    }
    #menu-content > button {    
      display: block;
      width: 200px;
      flex-shrink: 1;
      background: none;
      font: inherit;
      line-height: 1;
      margin: 0.5em;
      padding: 1em 2em;
    }


    #settings-content {
      width: 0px;
      display: none;
      flex-direction: column;
      justify-content: center;
    }
    #settings-content > button {    
      display: block;
      width: 200px;
      flex-shrink: 1;
      background: none;
      font: inherit;
      line-height: 1;
      margin: 0.5em;
      padding: 1em 2em;
    }


    .btn {
      box-sizing: border-box;
      appearance: none;
      background-color: transparent;
      border: 2px solid #e74c3c;
      border-radius: 0.6em;
      color: #e74c3c;
      cursor: pointer;
      display: flex;
      align-self: center;
      font-size: 1rem;
      font-weight: 400;
      line-height: 1;
      margin: 20px;
      padding: 1.2em 2.8em;
      text-decoration: none;
      text-align: center;
      text-transform: uppercase;
      font-family: 'Montserrat', sans-serif;
      font-weight: 700;
    }
    .btn:hover, .btn:focus {
      color: #fff;
      outline: 0;
    }

    .third {
      border-color: #3498db;
      color: #fff;
      box-shadow: 0 0 40px 40px #3498db inset, 0 0 0 0 #3498db;
      transition: all 150ms ease-in-out;
    }
    .third:hover {
      box-shadow: 0 0 10px 0 #3498db inset, 0 0 10px 4px #3498db;
    }
    .slider-container {
    }
    .slider {
      float: right;
    }




block content
  #stack
    canvas#game_canvas
    canvas#text_canvas
  #outer-container
    #inner-container
      #menu-content
        button.btn.third#resume Resume
        button.btn.third#save Save
        button.btn.third#load Load
        button.btn.third#settings Settings
      #settings-content 
        .slider-container
          | SFX
          input#sfx_slider.slider(type='range' min='0' max='1.0' value='0.5' step='0.01')
        .slider-container
          | Music
          input#music_slider.slider(type='range' min='0' max='1.0' value='0.5' step='0.01')
        button.btn.third#back Back


