extends layout

block head
  script(type='x-shader/x-vertex', id='vertex-shader', src='/programs/vertex_shader.vert')
  script(type='x-shader/x-fragment', id='fragment-shader', src='/programs/fragment_shader.frag')
  script(type='text/javascript', src='/common/js/utils.js')
  script(type='text/javascript', src='/common/lib/dat.gui.js')
  script(type='text/javascript', src='/common/lib/gl-matrix.js')
  script(type='text/javascript', src='/poc3d/index.js')
  style.
    #stack {
    position:relative;
    vertical-align: middle;
    }
    #stack > canvas {
    position:absolute;
    left:0;
    top:0;
    image-rendering: -moz-crisp-edges;
    image-rendering: -webkit-crisp-edges;
    image-rendering: pixelated;
    image-rendering: crisp-edges;
    }

block content
  #stack
    canvas#game_canvas

